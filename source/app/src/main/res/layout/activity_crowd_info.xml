<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:background="@mipmap/bg_crowd_banner">

        <Button
            android:id="@+id/btn_of_back"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:background="@null"
            android:drawableLeft="@mipmap/ic_of_back"
            android:paddingLeft="16dp" />

        <TextView
            android:id="@+id/tv_of_title"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_of_crowd_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="缪斯智能珠宝戒指"
                android:textColor="#193fc3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_of_crowd_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="缪斯智能珠宝戒指通过手机移动端轻松实现心率检查
，一键拍照，远程关爱，一键密语，一键呼救，来电
通知，摩斯密码。同时具备OCE绿色挖光功能"
                android:textColor="@color/gravity6"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_crowd_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="众筹OCE：2000000 OCE"
                    android:textColor="@color/gravity9"
                    android:textSize="12dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_award_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奖励池: 99999 OCE"
                    android:textColor="@color/gravity9"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_current_crowd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="99999 OCE"
                        android:textColor="@color/gravity3"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="已凑额度"
                        android:textColor="@color/gravity9"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_current_validity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="9天"
                        android:textColor="@color/gravity3"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="剩余天数"
                        android:textColor="@color/gravity9"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_current_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="999"
                        android:textColor="@color/gravity3"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="支持人数"
                        android:textColor="@color/gravity9"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@mipmap/icon_crowd_progress" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_crowd_level" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="众筹档位"
                    android:textColor="@color/gravity9"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_crowd_level1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_of_crowd_level"
                    android:gravity="center"
                    android:text="2999"
                    android:textColor="@color/gravity9"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_crowd_level2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_of_crowd_level"
                    android:gravity="center"
                    android:text="3999"
                    android:textColor="@color/gravity9"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_crowd_level3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_of_crowd_level"
                    android:gravity="center"
                    android:text="6999"
                    android:textColor="@color/gravity9"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_crowd_level4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_of_crowd_level"
                    android:gravity="center"
                    android:text="9999"
                    android:textColor="@color/gravity9"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="【个人档】您将以2999 OCE 的优惠价格获得缪斯智
能珠宝戒指施华洛世奇闪钻版一个。"
                android:textColor="@color/gravity6"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量"
                    android:textColor="@color/gravity9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_crowd_sub"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/gravity9"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_crowd_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/gravity9"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_crowd_apply"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/gravity9"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_vote" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投票档位"
                    android:textColor="@color/gravity9"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_vote_level1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_of_crowd_level"
                    android:gravity="center"
                    android:text="2999"
                    android:textColor="@color/gravity9"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_vote_level2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_of_crowd_level"
                    android:gravity="center"
                    android:text="3999"
                    android:textColor="@color/gravity9"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_vote_level3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_of_crowd_level"
                    android:gravity="center"
                    android:text="6999"
                    android:textColor="@color/gravity9"
                    android:textSize="16sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_vote_level4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_of_crowd_level"
                    android:gravity="center"
                    android:text="9999"
                    android:textColor="@color/gravity9"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="【个人档】您将以2999 OCE 的优惠价格获得缪斯智
能珠宝戒指施华洛世奇闪钻版一个。"
                android:textColor="@color/gravity6"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数量"
                    android:textColor="@color/gravity9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_vote_sub"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/gravity9"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_vote_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/gravity9"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_vote_apply"
                    android:layout_width="24dp"
                    android:layout_height="16dp"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/gravity9"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_support"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/selector_of_blue_button"
        android:text="@string/support"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>